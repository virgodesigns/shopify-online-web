{{ 'earth-day.css' | asset_url | stylesheet_tag }}

<div  class="background-img">

  <div class="foreground-image-container" style="position: relative; background-image: url(https://cdn.shopify.com/s/files/1/0785/1674/8585/files/Earth-day-typo.png?v=1713613940); height: 100vh;">
  
    <p class="text-style">>
      <span>Hint: Her net worth is over $1 Trillion!</span>
    </p>

    <p class="text-style">
      <span>Drop in your guesses below</span>
    </p>


    <form id="myForm" style="text-align: center; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
      <input type="text" id="userInput" placeholder="Text">
      <button type="submit">Submit</button>
    </form>

    <div id="message" style="display: none; color: green; text-align: center;">
      Will be revealed on Monday 22nd April
    </div>

  </div>

</div>

<script>
  // JavaScript
  document.getElementById('myForm').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevents the default form submission
    document.getElementById('message').style.display = 'block'; // Displays the message
  });
</script>

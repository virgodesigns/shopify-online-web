{{ 'good-company.css' | asset_url | stylesheet_tag }}
<style>
  {% if section.settings.show_on_mobile == false %}
    @media screen and (max-width: 768px){
        #shopify-section-{{ section.id }} {
      display:none;
    }}
  {% endif %}
  {% if section.settings.show_on_desktop == false %}
    @media screen and (min-width: 768px){
    #shopify-section-{{ section.id }} {
      display:none;
    }}
  {% endif %}
  #shopify-section-{{ section.id }} .fp-bg {
       background-image: url('{{ section.settings.parallax_image_mobile | image_url }}');
      background-size: cover;
      background-position: center 80%;
    }
    @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} .fp-bg {
       background-image: url('{{ section.settings.parallax_image | image_url }}');
    }
    }
</style>
<div class="good-company{% if section.settings.show_on_mobile == false %} small-hide{% else %} swipe-mobile{% endif %}{% if section.settings.show_on_desktop == false %} medium-hide large-up-hide{% else %} swipe-desktop{% endif %}">
  <div class="top-image">
    {% render 'responsive-image-cust', class:, mobileSrc: section.settings.top_image, desktopSrc: section.settings.top_image %}
  </div>
  {% if section.settings.para %}
    <p>
      {{ section.settings.para }}
    </p>
  {% endif %}
  <div class="bottom-image">
    {% render 'responsive-image-cust', class:, mobileSrc: section.settings.bottom_image, desktopSrc: section.settings.bottom_image %}
  </div>
  {% if section.settings.heading %}
    <h6>
      {{ section.settings.heading }}
    </h6>
  {% endif %}
  {% if section.settings.button_url and section.settings.button_text %}
    <a href="{{ section.settings.button_url }}">
      <button class="button black">
        <span>{{ section.settings.button_text }}</span>
      </button>
    </a>
  {% endif %}
</div>

{% schema %}
{
  "name": "Good Company",
  "class":"good-company",
  "settings": [
    {
      "type": "image_picker",
      "id": "top_image",
      "label": "Top Image"
    },
    {
      "type": "text",
      "id": "para",
      "label": "Paragraph",
      "default": "about your company"
    },
    {
      "type": "image_picker",
      "id": "bottom_image",
      "label": "Bottom Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Know the pillars of company"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Url"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Know more"
    },
      {
				"type": "checkbox",
				"id": "show_on_desktop",
				"default": false,
				"label": "Show on Desktop"
			},
      {
				"type": "checkbox",
				"id": "show_on_mobile",
				"default": true,
				"label": "Show on Mobile"
			},
    {
      "type": "image_picker",
      "id": "parallax_image",
      "label": "Parallax Image"
    },
    {
      "type": "image_picker",
      "id": "parallax_image_mobile",
      "label": "Parallax Image"
    }
  ],
  "presets": [
    {
      "name": "Good Company"
    }
  ]
}
{% endschema %}

{{ 'circularity-company.css' | asset_url | stylesheet_tag }}

<style>
  {% if section.settings.show_on_mobile == false %}
    @media screen and (max-width: 768px){
        #shopify-section-{{ section.id }} {
      display:none;
    }}
  {% endif %}
  {% if section.settings.show_on_desktop == false %}
    @media screen and (min-width: 768px){
    #shopify-section-{{ section.id }} {
      display:none;
    }}
  {% endif %}
  #shopify-section-{{ section.id }} .fp-bg {
       background-image: url('{{ section.settings.parallax_image_mobile | image_url }}');
      background-size: cover;
      background-position: center 80%;
    }
    @media screen and (min-width: 768px) {
    #shopify-section-{{ section.id }} .fp-bg {
       background-image: url('{{ section.settings.parallax_image | image_url }}');
    }
    }
</style>
<div class="circularity-company{% if section.settings.show_on_mobile == false %} small-hide{% else %} swipe-mobile{% endif %}{% if section.settings.show_on_desktop == false %} medium-hide large-up-hide{% else %} swipe-desktop{% endif %}"
  style="background: url('{{ section.settings.bg_image | image_url }}') no-repeat;
    background-size: cover;">
  <div>
    <div class="image">
      {% render 'responsive-image-cust', class:, mobileSrc: section.settings.image, desktopSrc: section.settings.image %}
    </div>
    {% if section.settings.heading %}
      <h6>
        {{ section.settings.heading }}
      </h6>
    {% endif %}
    {% if section.settings.para %}
      <p>
        {{ section.settings.para }}
      </p>
    {% endif %}
    {% if section.settings.button_url and section.settings.button_text %}
      <a href="{{ section.settings.button_url }}">
        <button class="button black">
          <span>{{ section.settings.button_text }}</span>
        </button>
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Circularity Company",
    "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "para",
      "label": "Paragraph",
      "default": "about circularity"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Know the circularity of company"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Url"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Know more"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
      {
				"type": "checkbox",
				"id": "show_on_desktop",
				"default": false,
				"label": "Show on Desktop"
			},
      {
				"type": "checkbox",
				"id": "show_on_mobile",
				"default": true,
				"label": "Show on Mobile"
			},
    {
      "type": "image_picker",
      "id": "parallax_image",
      "label": "Parallax Image"
    },
    {
      "type": "image_picker",
      "id": "parallax_image_mobile",
      "label": "Parallax Image"
    }
  ],
  "presets": [
    {
      "name": "Circularity Company"
    }
  ]
}
{% endschema %}

